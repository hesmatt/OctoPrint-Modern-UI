<div class="mb-3">
    <label class="form-label">Serial port</label>
    <select class="form-select" id="connection_ports" data-test-id="connection-ports" data-bind="options: portOptions, optionsCaption: portCaption, value: selectedPort, css: {disabled: !isErrorOrClosed()}, enable: enablePort()">
        <option>Default select</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
    </select>
</div>
<div class="mb-3">
    <label class="form-label">Baudrate</label>
    <select class="form-select" id="connection_baudrates" data-test-id="connection-baudrates" data-bind="options: baudrateOptions, optionsCaption: 'AUTO', value: selectedBaudrate, css: {disabled: !isErrorOrClosed()}, enable: isErrorOrClosed()">
        <option>Default select</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
    </select>
</div>
<div class="mb-3">
    <label class="form-label">Printer Profile</label>
    <select class="form-select" id="connection_printers" data-test-id="connection-printer-profiles" data-bind="options: printerOptions, optionsText: 'name', optionsValue: 'id', value: selectedPrinter, css: {disabled: !isErrorOrClosed()}, enable: isErrorOrClosed()">
        <option>Default select</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
    </select>
</div>
<div class="form-check mt-3">
    <input class="form-check-input" type="checkbox" id="connection_save" data-bind="checked: saveSettings, enable: enableSaveSettings()">
    <label class="form-check-label">
        Save connection settings
    </label>
</div>
<div class="form-check mt-3">
    <input class="form-check-input" type="checkbox" id="connection_autoconnect" data-bind="checked: settings.serial_autoconnect, enable: enableAutoConnect()">
    <label class="form-check-label">
        Auto-connect on server startup
    </label>
</div>
<div class="mt-3">
    <button type="button" class="btn btn-dark" id="printer_connect" data-test-id="connection-connect" data-bind="click: connect, text: buttonText, enable: enableConnect">Connect</button>
</div>
